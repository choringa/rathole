<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatHoleMainActivity">


    <TextView
        android:id="@+id/main_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAT_H0L3"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/main_activity_option_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_title"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Counter Unlocks:"/>
        <TextView
            android:id="@+id/main_activity_counter_tv"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="0"/>

        <Button
            android:id="@+id/main_activity_counter_btn_start"
            android:layout_weight="2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:background="@android:drawable/ic_media_play"
            android:text="Start"/>

        <Button
            android:id="@+id/main_activity_counter_btn_stop"
            android:layout_weight="2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:textSize="13sp"
            android:background="@android:drawable/ic_delete"
            android:text="Stop"/>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>