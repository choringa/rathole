<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RatHoleMainActivity">


    <TextView
        android:id="@+id/main_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="RAT_H0L3"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/main_activity_option_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_title"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:text="Counter Unlocks:" />

            <TextView
                android:id="@+id/main_activity_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:text="Alarm" />

            <TextView
                android:id="@+id/main_activity_alarm_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_activity_services_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_activity_service_btn_start"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@android:drawable/ic_media_play"
                android:text="Start"
                android:textSize="13sp" />

            <Button
                android:id="@+id/main_activity_service_btn_stop"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@android:drawable/ic_delete"
                android:text="Stop"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>