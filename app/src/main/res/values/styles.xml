<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/backgroundAppColor</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="boton_main_restart">
        <item name="android:background">@drawable/main_button_restart_selector</item>
        <item name="android:textColor">@color/main_button_restart_color</item>
    </style>

    <style name="boton_main_start">
        <item name="android:background">@drawable/main_button_start_selector</item>
        <item name="android:textColor">@color/main_button_start_color</item>
    </style>

    <style name="boton_main_stop">
        <item name="android:background">@drawable/main_button_stop_selector</item>
        <item name="android:textColor">@color/main_button_stop_color</item>
    </style>

</resources>
